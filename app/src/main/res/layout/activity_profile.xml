<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#EEE4E4"
    tools:context=".Profile">



    <ImageView
        android:layout_marginTop="40dp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/headd"
        android:layout_gravity="center"/>
    <TextView
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:id="@+id/profileUserID"
        android:layout_height="wrap_content"
        android:text="User ID"/>
<LinearLayout
    android:layout_gravity="center"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/profileFname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="First Name" />

    <TextView
        android:id="@+id/profileLname"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Last Name"/>
</LinearLayout>
    <TextView
        android:layout_gravity="center"
        android:id="@+id/profileAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address" />

    <TextView
        android:layout_gravity="center"
        android:id="@+id/profilePostal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Postal" />

    <TextView
        android:layout_gravity="center"
        android:id="@+id/profileEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email" />

    <TextView
        android:layout_gravity="center"
        android:id="@+id/profilePhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone" />

    <Button
        android:layout_marginTop="100dp"
        android:layout_gravity="center"
        android:background="@color/theme"
        android:id="@+id/profilebtnEdit"
        android:textColor="#FFF"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Edit your profile"/>
    <Button
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:background="@color/theme"
        android:id="@+id/profileChangepwd"
        android:textColor="#FFF"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Change your Password"/>
    <Button
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:background="@color/theme"
        android:id="@+id/profileRefresh"
        android:textColor="#FFF"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Refresh"/>
</LinearLayout>